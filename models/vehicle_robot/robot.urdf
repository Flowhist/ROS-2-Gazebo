<?xml version="1.0"?>
<robot name="vehicle_robot">
  
  <!-- Base link (chassis) -->
  <link name="vehicle_robot/chassis">
    <visual>
      <geometry>
        <box size="2.0 1.0 0.5"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- IMU Link -->
  <link name="vehicle_robot/imu_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="vehicle_robot/chassis"/>
    <child link="vehicle_robot/imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Lidar Link -->
  <link name="vehicle_robot/lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="vehicle_robot/chassis"/>
    <child link="vehicle_robot/lidar_link"/>
    <origin xyz="0.8 0 0.5" rpy="0 0 0"/>
  </joint>

  <!-- Left Rear Wheel -->
  <link name="left_rear_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.4" length="0.2"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="left_rear_wheel_joint" type="continuous">
    <parent link="vehicle_robot/chassis"/>
    <child link="left_rear_wheel"/>
    <origin xyz="-0.5 0.6 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Right Rear Wheel -->
  <link name="right_rear_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.4" length="0.2"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="right_rear_wheel_joint" type="continuous">
    <parent link="vehicle_robot/chassis"/>
    <child link="right_rear_wheel"/>
    <origin xyz="-0.5 -0.6 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Left Front Wheel -->
  <link name="left_front_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.4" length="0.2"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="vehicle_robot/chassis"/>
    <child link="left_front_wheel"/>
    <origin xyz="0.5 0.6 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Right Front Wheel -->
  <link name="right_front_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.4" length="0.2"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="vehicle_robot/chassis"/>
    <child link="right_front_wheel"/>
    <origin xyz="0.5 -0.6 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
